{
  "compilerOptions": {
    // Default
    "target": "ES2019",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Added
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["es2022"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["lib", "build.cjs"]
}
